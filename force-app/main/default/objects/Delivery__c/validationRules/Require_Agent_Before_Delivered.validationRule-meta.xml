<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Require_Agent_Before_Delivered</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
  ISPICKVAL(Delivery_Status__c, &quot;Delivered&quot;),
  ISBLANK(Assigned_Agent__c)
)</errorConditionFormula>
    <errorDisplayField>Assigned_Agent__c</errorDisplayField>
    <errorMessage>Assign an Agent before marking this delivery as Delivered.</errorMessage>
</ValidationRule>
